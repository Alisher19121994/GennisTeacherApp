<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/fullname_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="Alisher Daminov"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="normal" />

        <RadioGroup
            android:id="@+id/toggle"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/control_switch_background_border"
            android:checkedButton="@+id/calm"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/calm"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:background="@drawable/control_switch_background_selector_top"
                android:button="@null"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Available"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rumor"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/control_switch_background_selector_middle"
                android:button="@null"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Absence"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/outbreak"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginEnd="1.5dp"
                android:layout_weight="1"
                android:background="@drawable/control_switch_background_selector_bellow"
                android:button="@null"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Explicable"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:textStyle="bold" />
        </RadioGroup>

    </LinearLayout>

</LinearLayout>