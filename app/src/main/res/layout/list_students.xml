<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/students_background_linear_layout_id"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#A8DDF4"
            android:padding="10sp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:background="@drawable/payment"
                android:gravity="center_vertical|end"
                android:padding="4dp"
                android:visibility="gone">


                <TextView
                    android:id="@+id/payment_students_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="300.000"
                    android:textAllCaps="false"
                    android:textColor="#03DF0C"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:background="@drawable/unpayment"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:visibility="visible">


                <TextView
                    android:id="@+id/payment_no_students_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="-300.000"
                    android:textAllCaps="false"
                    android:textColor="#EC0808"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>



            <LinearLayout
                android:id="@+id/students_foreground_linear_layout_id"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="visible">


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/in_my_group_students_image_id"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:adjustViewBounds="true"
                    android:padding="4sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bekzod"
                    app:shapeAppearanceOverlay="@style/circle" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="3sp">

                    <TextView
                        android:id="@+id/in_my_group_students_last_name_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="9sp"
                        android:ellipsize="end"
                        android:text="Last name"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/in_my_group_students_first_name_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Name"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>




    </FrameLayout>

</LinearLayout>